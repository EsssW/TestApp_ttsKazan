<Window x:Class="ClientInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientInterface"
        mc:Ignorable="d"
        Title="MainWindow"
        Width="1000" Height="800"
        
        >
    <Grid Background="LightCyan">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button Content="Старт" Grid.Row="0" Grid.Column="0"/>
        <Button Content="Стоп" Grid.Row="0" Grid.Column="1"/>

        <Grid x:Name="WorkGrid" MouseWheel="MainWindow_OnMouseWheel" Background="LightGray" Grid.Row="1" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="3" Cursor="Cross" MouseDown="WorkGrid_MouseDown">
            
        </Grid>
    </Grid>
</Window>
